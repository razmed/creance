{
    "name": "gestion-creances/web-app",
    "description": "Application web de gestion des créances",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Système de Gestion des Créances",
            "email": "admin@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "tecnickcom/tcpdf": "^6.4",
        "phpoffice/phpspreadsheet": "^1.24"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "GestionCreances\\": "classes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "install-deps": "composer install --no-dev --optimize-autoloader",
        "update-deps": "composer update --no-dev --optimize-autoloader"
    }
}